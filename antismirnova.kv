#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import utils kivy.utils
#:import Animation kivy.animation.Animation
#:import label_text_wrap gui.label_text_wrap

<ScreenManagement>:
    transition: FadeTransition()
    MainUi:
        name: "Antismirnova"

<CustomLabel@Label>:
    -background_color: 0, 0, 0, 0
    -radius_top_left: 0
    -radius_top_right: 0
    -radius_bottom_right: 0
    -radius_bottom_left: 0
    text_size: self.size[0]-10, self.size[1]
    halign: "right"
    valign: "middle"
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: root.radius_top_left, root.radius_top_right, root.radius_bottom_right, root.radius_bottom_left

<CustomButton@ButtonBehavior+Label>:
    -canvas_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: (root.canvas_color if not self.disabled else self.background_disabled_normal)
        RoundedRectangle:
            group: "button_background"
            size: self.size
            pos: self.pos
    on_press:
        default_size = self.size
        animation_size = (self.size[0]*0.98, self.size[1]*0.98)

        default_pos = self.pos
        animation_pos = (self.pos[0]+(default_size[0]-animation_size[0])/2, self.pos[1]+(default_size[1]-animation_size[1])/2)

        animation = Animation(size=animation_size, duration=0.1)
        animation += Animation(size=default_size, duration=0.1)

        animation1 = Animation(pos=animation_pos, duration=0.1)
        animation1 += Animation(pos=default_pos, duration=0.1)

        animation.start(self.canvas.before.get_group("button_background")[0])
        animation1.start(self.canvas.before.get_group("button_background")[0])

<CustomTextInput>:
    canvas.before:
        Color:
            rgba: (root.bg_color if not self.disabled else self.background_disabled_normal)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.radius

<FileDragAndDropperStateLabel>:
    canvas.before:
        Color:
            group: "bg_color"
            rgba: root.bg_color
        RoundedRectangle:
            group: "background"
            size: self.size
            pos: self.pos
    Label:
        id: drag_and_drop_label
        size_hint: (1, 1)
        text: root.drag_and_drop_label_text
        color: "black"

<FileDragAndDropperStateInfo>:
    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
    spacing: 10
    padding: 10, 10, 10, 10
    Image:
        source: root.image_source
        size_hint: .5, .8
        pos_hint: {"center_x": .5, "center_y": .5}
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        Label:
            id: info_label
            multiline: True
            halign: "center"
            valign: "middle"
            size_hint: (1, 1)
            text: label_text_wrap(root.info_label_text, self.width, self)
            color: "black"
        Label:
            id: drag_and_drop_label
            canvas.before:
                Color:
                    group: "bg_color"
                    rgba: root.drag_and_drop_label_bg_color
                RoundedRectangle:
                    group: "background"
                    size: self.size
                    pos: self.pos
            size_hint: (1, 1)
            text: root.drag_and_drop_label_text
            color: "black"

<MainUi>:
    canvas.before:
        Color:
            rgb: 255, 255, 255
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            FileDragAndDropper:
                id: file_drag_and_dropper
                padding: 50, 50, 25, 25
                size_hint: .6, 1
                creator_text_input: creator_text_input
                last_modified_by_text_input: last_modified_by_text_input
                revision_text_input: revision_text_input
                application_text_input: application_text_input
                editing_time_text_input: editing_time_text_input

                reset_button: reset_button
                send_hello_button: send_hello_button
                save_button: save_button
            AnchorLayout:
                padding: 25, 50, 50, 25
                size_hint: .4, 1
                BoxLayout:
                    orientation: "vertical"
                    padding: 10, 10, 10, 10
                    spacing: 5
                    canvas.before:
                        Color:
                            rgba: 255, 255, 0, .5
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                    CustomButton:
                        id: reset_button
                        canvas_color: utils.get_color_from_hex("5ec6ff")
                        text: "Reset metadata"
                        color: "black"
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        disabled_color: "grey"
                        disabled: True
                    CustomButton:
                        id: send_hello_button
                        canvas_color: utils.get_color_from_hex("5ec6ff")
                        text: "Send hello to Smivnova"
                        color: "black"
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        disabled_color: "grey"
                        disabled: True
                    CustomButton:
                        id: save_button
                        canvas_color: utils.get_color_from_hex("5ec6ff")
                        text: "Save"
                        color: "black"
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        disabled_color: "grey"
                        disabled: True
                        on_press:
                            root.save_changes()
        AnchorLayout:
            padding: 50, 25, 50, 50
            GridLayout:
                cols: 2
                spacing: 5
                padding: 5, 5, 5, 5
                canvas.before:
                    Color:
                        rgba: 255, 255, 0, .5
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    size_hint: .3, 1
                    CustomLabel:
                        text: "Creator:"
                        radius_top_left: 10
                        background_color: utils.get_color_from_hex("5ec6ff")
                        color: "black"
                    CustomLabel:
                        text: "Last modified by:"
                        background_color: utils.get_color_from_hex("5ec6ff")
                        color: "black"
                    CustomLabel:
                        text: "Revision:"
                        background_color: utils.get_color_from_hex("5ec6ff")
                        color: "black"
                    CustomLabel:
                        text: "Application:"
                        background_color: utils.get_color_from_hex("5ec6ff")
                        color: "black"
                    CustomLabel:
                        text: "Editing time:"
                        radius_bottom_left: 10
                        background_color: utils.get_color_from_hex("5ec6ff")
                        color: "black"
                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    CustomTextInput:
                        id: creator_text_input
                        bg_color: utils.get_color_from_hex("5ec6ff")
                        radius: 0, 10, 0, 0
                        disabled: True
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        text_changed_function: lambda *_: root.text_input_text_updated()
                    CustomTextInput:
                        id: last_modified_by_text_input
                        bg_color: utils.get_color_from_hex("5ec6ff")
                        disabled: True
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        text_changed_function: lambda *_: root.text_input_text_updated()
                    CustomTextInput:
                        id: revision_text_input
                        bg_color: utils.get_color_from_hex("5ec6ff")
                        disabled: True
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        input_filter: "int"
                        text_changed_function: lambda *_: root.text_input_text_updated()
                    CustomTextInput:
                        id: application_text_input
                        bg_color: utils.get_color_from_hex("5ec6ff")
                        disabled: True
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        text_changed_function: lambda *_: root.text_input_text_updated()
                    CustomTextInput:
                        id: editing_time_text_input
                        bg_color: utils.get_color_from_hex("5ec6ff")
                        radius: 0, 0, 10, 0
                        disabled: True
                        background_disabled_normal: utils.get_color_from_hex("beccd4")
                        input_filter: "int"
                        text_changed_function: lambda *_: root.text_input_text_updated()
